extends common/layout

block content_main
    div.banner.container.mb-20
        img(src="/images/banner.jpg")
    div.container
        div.main.fl.mr-20
            article.article
                div.date
                    span.glyphicon.glyphicon-calendar.ico
                    span.day #{post.time.sDay}
                    span.month #{post.time.sMonth}
                    span.year #{post.time.year}
                h3.title.pt-10.pb-10 #{post.title}
                p.info.ft-lighter
                    span.glyphicon.glyphicon-user.mr-10
                    a.mr-10(href="/u/#{post.name}") #{post.name}
                    span.mr-10 /
                    span.glyphicon.glyphicon-comment.mr-10
                    span.mr-10 #{post.comments.length}
                    span.mr-10 /
                    span.glyphicon.glyphicon-eye-open.mr-10
                    span.mr-10 #{post.pv}
                    span.mr-10 /
                    if post.tags.length
                        span.glyphicon.glyphicon-tags.mr-10
                        each tag in post.tags
                            a.mr-10(href="tags/#{tag}") #{tag}
                    if user && (user.name == post.name)
                        span.mr-10 /
                        a.edit.mr-10(href="/edit/#{post.name}/#{post.time.day}/#{post.title}") 编辑
                        span.mr-10 /
                        a.delete.mr-10(href="/remove/#{post.name}/#{post.time.day}/#{post.title}") 删除
                div.post !{post.post}
            include articles/comment
        aside.side.fl
            include side/me
            include side/gallery
